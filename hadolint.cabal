name:                hadolint
version:             1.2.1.0
synopsis:            Dockerfile Linter JavaScript API
homepage:            https://github.com/lukasmartinelli/hadolint
license:             MIT
license-file:        LICENSE
author:              Lukas Martinelli
maintainer:          me@lukasmartinelli.ch
copyright:           Lukas Martinelli
description:         A smarter Dockerfile linter that helps you build best practice Docker images.
category:            Development
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Hadolint.Bash
                     , Hadolint.Formatter
                     , Hadolint.Lexer
                     , Hadolint.Normalize
                     , Hadolint.Parser
                     , Hadolint.Rules
                     , Hadolint.Syntax
  build-depends:       base >=4.8 && < 5
                     , parsec >=3.1
                     , bytestring >=0.10
                     , split >= 0.2
                     , ShellCheck >= 0.4.5
  default-language:    Haskell2010

executable hadolint
  hs-source-dirs:      app
  main-is:             Main.hs
  build-depends:       base >=4.8 && < 5
                     , hadolint
                     , parsec >=3.1
                     , optparse-applicative <0.13.3.0
  default-language:    Haskell2010

test-suite hadolint-unit-tests
  hs-source-dirs:      test
  type:                exitcode-stdio-1.0
  main-is:             Spec.hs
  build-depends:       base >=4.8 && < 5
                     , parsec >=3.1
                     , bytestring >=0.10
                     , split >= 0.2
                     , ShellCheck >= 0.4.5
                     , HUnit >= 1.2
                     , hspec
                     , hadolint
  default-language:    Haskell2010

source-repository head
  type:     git
  location: git@github.com:lukasmartinelli/hadolint.git
